@foreach (var item in Model)
{
<div class="Post">
    <div class="Title">
        @Html.ActionLink(item.Title, "Details", new { id = item.Id })
    </div>
    <div class="Description">
        @Html.DisplayFor(modelItem => item.Description)
    </div>
    <div class="price">
        Ebbeyi: @Html.DisplayFor(modelItem => item.Price) UGX
    </div>
    <img class="Image" src="~/Images/@Html.DisplayFor(modelItem => item.Image)" alt="no" />
    <div class="location">
        Akatale W'endi : @Html.DisplayFor(modelItem => item.Market)
    </div>
    <div class="createdat">
        Date Posted @Html.DisplayFor(modelItem => item.CreatedAt)
    </div>
    <a  class="goin" href='@Url.Action("Details", "Posts", new { id = item.Id })'>
        <img  class="goin" src='@Url.Content("~/Images/goin.png")' />
    </a>
